<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<VBox fx:controller="ru.vshum.chat.client.Controller" xmlns:fx="http://javafx.com/fxml" >

    <HBox>
        <TextField promptText="Insert your name"/>
        <TextField fx:id="portField" text="8189" />
        <Button  HBox.hgrow="ALWAYS" maxWidth="Infinity" text="Log in!" onAction="#connect"/>
    </HBox>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" promptText="Здесь будет отображаться история ваших переписок..." />
    <HBox>
    <TextField fx:id="messageField" HBox.hgrow="ALWAYS" onAction="#sendMessage" promptText=" Text here..."/>
    <Button text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>